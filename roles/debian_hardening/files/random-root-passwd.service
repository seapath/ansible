[Unit]
DefaultDependencies=no
RequiresMountsFor=/etc
After=local-fs.target
ConditionPathIsReadWrite=/etc

[Service]
Type=oneshot
ExecStart=/bin/sh -c 'echo "root:$(head -c 1000 /dev/urandom | tr -dc "a-zA-Z0-9~!@#$%^&*_-" | fold -w 64 | head -n 1)" | chpasswd -c SHA512'

[Install]
WantedBy=sysinit.target
