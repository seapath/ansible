<!--
  VM template for test_add_vm.yaml
-->

<domain type="{{ vm_domaine | default('qemu') }}">
    <name>{{ vm_name }}</name>
    <uuid>{{ vm_uuid }}</uuid>
    <title>VOTP {{ vm_name }}</title>
    <description>
            Test template working with test_add_vm.yaml
    </description>
    <memory unit="MiB">256</memory>
    <currentMemory unit="MiB">256</currentMemory>
    <vcpu placement="static">1</vcpu>
    <os firmware="efi">
        <type arch="x86_64" machine="pc-i440fx-4.1">hvm</type>
        <boot dev="hd" />
        <bootmenu enable="no" />
        <bios useserial="yes" rebootTimeout="0" />
        <smbios mode="emulate" />
    </os>
    <features>
        <acpi />
        <apic />
        <vmport state="off" />
    </features>
    <cpu mode="host-model" check="partial">
        <model fallback="allow" />
    </cpu>
    <clock offset="utc">
        <timer name="rtc" tickpolicy="catchup" />
        <timer name="pit" tickpolicy="delay" />
        <timer name="hpet" present="no" />
    </clock>
    <on_poweroff>destroy</on_poweroff>
    <on_reboot>restart</on_reboot>
    <on_crash>destroy</on_crash>
    <pm>
        <suspend-to-mem enabled="no" />
        <suspend-to-disk enabled="no" />
    </pm>
    <devices>
        <emulator>/usr/bin/qemu-system-x86_64</emulator>
        <!-- Ceph disk -->
        <disk type="network" device="disk">
            <!-- Only writeback caches are secure with Ceph RBD -->
            <driver name="qemu" type="raw" cache="writeback" />
            <auth username="libvirt">
                <secret type="ceph" uuid="{{ secret_uuid }}" />
            </auth>
            <source protocol="rbd" name="{{ rbd_pool }}/{{ os_disk }}">
                <host name="rbd" port="6789" />
            </source>
            <target dev="vda" bus="virtio" />
            </disk>
            <disk type="network" device="disk">
            <!-- Only writeback caches are secure with Ceph RBD -->
            <driver name="qemu" type="raw" cache="writeback" />
            <auth username="libvirt">
                <secret type="ceph" uuid="{{ secret_uuid }}" />
            </auth>
            <source protocol="rbd" name="{{ rbd_pool }}/{{ data_disk }}">
                <host name="rbd" port="6789" />
            </source>
            <target dev="vdb" bus="virtio" />
        </disk>
        <interface type="bridge">
            <mac address="{{ mac_address }}"/>
            <source bridge="ovsbr0"/>
            <virtualport type='openvswitch'/>
            <model type="virtio"/>
            <alias name="net0"/>
            <address type="pci" domain="0x0000" bus="0x00" slot="0x02" function="0x0"/>
        </interface>
        <controller type="usb" index="0" model="piix3-uhci" />
        <controller type="pci" index="0" model="pci-root" />
        <serial type="pty">
            <target type="isa-serial" port="0">
                <model name="isa-serial" />
            </target>
        </serial>
        <console type="pty">
            <target type="serial" port="0" />
        </console>
        <memballoon model="virtio">
            <address type="pci" domain="0x0000" bus="0x00" slot="0x03" function="0x0" />
        </memballoon>
        <watchdog model="ib700" action="poweroff" />
    </devices>
</domain>
