{% set nics = [] %}
{% set cpus = [] %}
{% for item in nics_affinity %}
  {% for nic, cpu in item.items() %}
    {{ nics.append(nic) }}
    {{ cpus.append(cpu) }}
  {% endfor %}
{% endfor %}

SETUP_IRQ_AFFINITY_NICS=--nic {{ nics | join(' --nic ') }}
SETUP_IRQ_AFFINITY_CPUS=--cpu {{ cpus | join(' --cpu ')}}
