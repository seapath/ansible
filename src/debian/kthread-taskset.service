[Unit]
Description="taskset of kthreadd at boot time"
Before=basic.target
After=local-fs.target sysinit.target
DefaultDependencies=no

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/usr/local/bin/taskset_boot.sh

[Install]
WantedBy=multi-user.target
